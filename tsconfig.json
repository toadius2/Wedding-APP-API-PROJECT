{
    "compilerOptions": {
        "outDir": "./lib/",
        "strictNullChecks": true,
        "declaration": true,
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es2016",
            "dom"
        ],
        "noUnusedLocals": true,
        "allowUnusedLabels": false,
        "sourceMap": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*",
        "./node_modules/@types/**/*.d.ts"
    ],
    "exclude": [],
    "noEmit": true
}